<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountFragment" >

    <Button
        android:id="@+id/bt_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="100dp"
        android:text="@string/article"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/messege"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_article"
        app:layout_constraintStart_toStartOf="@+id/bt_article"
        app:layout_constraintTop_toBottomOf="@+id/bt_article" />

    <Button
        android:id="@+id/bt_ip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/ip"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_message"
        app:layout_constraintStart_toStartOf="@+id/bt_message"
        app:layout_constraintTop_toBottomOf="@+id/bt_message" />

</androidx.constraintlayout.widget.ConstraintLayout>